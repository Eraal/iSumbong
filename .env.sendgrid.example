# Example .env for using SendGrid over SMTP on port 2525

# App URL
APP_URL=https://isumbong.live

# SMTP via SendGrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=2525
SMTP_ENCRYPTION=tls
# SendGrid requires the literal username 'apikey'
SMTP_USERNAME=apikey
# Use a SendGrid API key (starts with 'SG.') with Mail Send permission
SMTP_PASSWORD=SG.your-api-key

# Use a verified sender address from SendGrid (Single Sender or Domain Auth)
FROM_EMAIL=no-reply@isumbong.live
FROM_NAME=iSumbong system
# Optional explicit reply-to (falls back to FROM_EMAIL if empty)
# REPLY_TO_EMAIL=support@yourdomain.com

# Force IPv4 if your host has IPv6 routing issues
SMTP_FORCE_IPV4=1

# Enable SMTP logging temporarily while testing (creates logs/mail.log)
SMTP_DEBUG_LOG=1

# Tesseract (optional)
# TESSERACT_PATH=/usr/bin/tesseract

# OpenAI (if you use the AI features)
OPENAI_API_KEY=your-openai-api-key
